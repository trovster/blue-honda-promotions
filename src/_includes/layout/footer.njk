<footer>
    <div class="footer bg-neutral text-neutral-content p-10">
        <aside class="md:max-w-sm">
            <h3 class="footer-title">About</h3>
            <p>{{ site.description }}</p>
            <p><a href="/about/" class="link">Read more</a></p>
        </aside>

        <div>
            <h3 class="footer-title">Venues</h3>
            <nav>
                <ul class="menu menu-xs p-0 -mx-2">
                    {% for venue in venues %}
                        <li>
                            <a href="{{ venue.url }}">{{ venue.data.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>

        <div>
            <h3 class="footer-title">Locations</h3>
            <nav>
                <ul class="menu menu-xs p-0 -mx-2">
                    {% for location in collections.locationNames %}
                        <li>
                            <a href="/locations/{{ location | slugify }}/">{{ location }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

    <footer class="footer bg-base-200 text-base-content border-base-300 border-t px-10 py-4">
        Â© {% year %}

        {% include 'toggle.njk' %}
    </div>
</footer>
