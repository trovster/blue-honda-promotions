---
title: Welcome
---
<div class="hero bg-base-200 pb-6 sm:pb-0 md:min-h-[500px]">
  <div class="hero-content text-center">
    <div class="max-w-md sm:max-w-xl py-4 space-y-6">
      <h1 class="text-3xl sm:text-5xl font-bold">{{ site.description }}</h1>
      <a href="/about/" class="btn btn-accent">Find Out More</a>
    </div>
  </div>
</div>

<div class="sm:container mx-auto mb-8 sm:my-12">
    {%- from 'component.njk' import component with context -%}
    {{ component('event/card', collections.events | next) }}
</div>

<div class="divider divider-accent">Upcoming Events…</div>

<div class="container mx-auto my-8">
    {%- from 'component.njk' import component with context -%}
    {{ component('event/timeline', collections.events | upcoming | limit(4)) }}
</div>

<div class="divider divider-accent">Previous Events…</div>

<div class="container mx-auto my-8">
    {%- from 'component.njk' import component with context -%}
    {{ component('event/timeline', collections.events | past | reverse | limit(20)) }}
</div>
