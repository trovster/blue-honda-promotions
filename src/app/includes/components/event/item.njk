{%- macro component(event, config) -%}
    <div class="card indicator bg-neutral text-neutral-content flex w-auto max-w-lg shadow-2xl mx-auto not-prose">
        <div class="card-body">
            <h1 class="card-title flex justify-between">
                <span>{{ event.data.title }}</span>
            </h1>

            {% if (collections.venues | pluck(event.data.venue)).length %}
            <p><strong>Location</strong>: <a href="/venues/{{ event.data.venue | slugify }}/" class="link">{{ event.data.venue }}</a>, {{ event.data.location }}</p>
            {% else %}
            <p><strong>Location</strong>: {{ event.data.venue }}, {{ event.data.location }}</p>
            {% endif %}

            <p><strong>Date</strong>: {{ event.data.date | date('cccc dd LLLL y') }}</p>

            <ul class="list-disc list-outside pl-4">
                {% for artist in event.data.artists %}
                    <li>{{ artist }}</li>
                {% endfor %}
            </ul>

            <div class="card-actions mt-2">
                <a href="{{ event.page.url }}" class="btn btn-sm btn-secondary">View Event</a>
            </div>
        </div>

        <span class="indicator-item indicator-top indicator-center badge badge-lg badge-secondary">Next Event</span>
    </div>
{%- endmacro -%}
