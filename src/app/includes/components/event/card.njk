{%- macro component(event, config) -%}
    <div class="card indicator max-sm:rounded-none bg-neutral text-neutral-content flex w-auto max-w-screen-sm md:shadow-2xl mx-auto not-prose">
        <div class="card-body">
            <h1 class="card-title flex justify-between">
                <span>{{ event.data.title | safe }}</span>
            </h1>

            {% if (collections.venues | where(event.data.venue)).length %}
            <p><strong>Location</strong>: <a href="/venues/{{ event.data.venue | slugify }}/" class="link">{{ event.data.venue }}</a>, {{ event.data.location }}</p>
            {% else %}
            <p><strong>Location</strong>: {{ event.data.venue }}, {{ event.data.location }}</p>
            {% endif %}

            <p><strong>Date</strong>: {{ event.data.date | date('cccc, ddS LLLL y') }}</p>

            <p><strong>Artists</strong>: {{ event.data.artists | join(', ') }}</p>

            <div class="card-actions mt-2">
                <a href="{{ event.page.url }}" class="btn btn-sm btn-accent">View Event</a>
            </div>
        </div>

        <span class="indicator-item indicator-top indicator-center badge p-4 rounded-btn font-bold badge-secondary">Next Event</span>
    </div>
{%- endmacro -%}
