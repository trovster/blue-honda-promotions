<footer class="border-secondary border-t-4">
    <div class="footer bg-neutral text-neutral-content p-8">
        <aside class="md:max-w-sm">
            <h3 class="footer-title">About</h3>
            <p>
                {{ site.description }} Covering music events in North East
                Lincolnshire and in Hull.
            </p>
            <p><a href="/about/" class="link">Read more</a></p>
        </aside>

        <div>
            <h3 class="footer-title">Venues</h3>
            <nav>
                <ul class="menu menu-xs p-0 -mx-2">
                    {% for venue in collections.venues %}
                        <li>
                            <a href="{{ venue.page.url }}">{{ venue.data.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>

        <div>
            <h3 class="footer-title">Locations</h3>
            <nav>
                <ul class="menu menu-xs p-0 -mx-2">
                    {% for location in collections.locationNames %}
                        <li>
                            <a href="{{ location.page.url }}">{{ location.data.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

    <footer class="footer bg-base-200 text-base-content border-base-300 border-t px-8 flex items-center">
        {# <div class="flex items-center justify-between"> #}
            <div>
                Â© {% year %}
